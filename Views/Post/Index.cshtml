@model dotnet_mvc.Models.PostAuthorViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Post" asp-action="Index" method="get">
    <p>
        Title: <input type="text" asp-for="SearchString" name="SearchString" />
        <input type="submit" value="Filter" />
        <select asp-for="PostAuthor" asp-items="Model.Authors">
            <option value="">All</option>
        </select>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].FeaturedImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].UrlHandle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts![0].Visible)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Posts!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Heading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeaturedImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UrlHandle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visible)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
